{
    "name": "BuildAndReleaseTask",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "prune-project": "yarn install --production",
        "postprune-project": "yarn clean-maps",
        "clean-modules": "if exist \"./node_modules\" (rmdir \"./node_modules\" /S/Q)",
        "clean-bin": "if exist \"./bin\" (rmdir \"./bin\" /S/Q)",
        "clean": "yarn clean-modules && yarn clean-bin",
        "build": "yarn update-env && yarn run tsc",
        "postbuild": "cd .. && if not exist .env (yarn create-env-file)",
        "build-watch": "yarn update-env && yarn run tsc --watch",
        "install-build": "yarn install --force && yarn build",
        "build-run-task": "yarn install-build && yarn run-task",
        "run-task": "cls && yarn node ./bin/index.js",
        "prerebuild": "yarn clean",
        "rebuild": "yarn install-build",
        "create-debug-env": "cd .. && echo NODE_ENV=DEBUG > .env",
        "create-prod-env": "echo NODE_ENV=PRODUCTION > ./bin/.env",
        "preupdate-env": "if not exist \"./bin\" (mkdir \"./bin\")",
        "update-env": "cd .. && copy .env \"./buildAndReleaseTask/bin/.env\" /Y",
        "prod-prepare": "yarn create-prod-env",
        "clean-maps": "cd bin && del *.map /S",
        "create-package": "cd .. && tfx extension create --manifest-globs vss-extension.json --output-path \"./vsix-packages\"",
        "prepackage-task": "cls && yarn prod-prepare && yarn install-build && yarn create-prod-env",
        "package-task": "yarn prune-project && yarn create-package",
        "postpackage-task": "yarn install-build"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.21.1",
        "azure-pipelines-task-lib": "^2.12.0",
        "chai": "^4.2.0",
        "chalk": "^4.1.0",
        "dotenv": "^8.2.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "newman": "^5.2.2",
        "node": "^15.4.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.0",
        "@types/newman": "^5.1.1",
        "@types/node": "^14.14.20",
        "@types/q": "^1.5.4",
        "@typescript-eslint/eslint-plugin": "^4.13.0",
        "@typescript-eslint/parser": "^4.13.0",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "nyc": "^15.1.0",
        "prettier": "^2.2.1",
        "source-map-support": "^0.5.19",
        "sync-request": "^6.1.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.0.2",
        "yarn": "^1.22.10"
    }
}
